{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with web}}

    <hr>
    <br>
    <div>
        <h3> {{> title big=true data="Languages:"}}</h3>
        {{#each languages}}
        <ul>
            <li>
                <b>{{name}}<b>
                        <b>{{version}}</b>
                        <b>{{description}}</b>
            </li>
            <br>

            <div>
                {{#each elements}}
                <ul>
                    <li>
                        {{name}}
                        {{description }}
                    </li>
            </div>
            <br>

            <div>
                {{#each attributes}}
                <ul>
                    <li>
                        {{name}}
                        {{description}}
                    </li>
                </ul>
                {{/each}}
            </div>
            <br>
            <div>
                {{#each properties}}
                <ul>
                    <li>
                        {{name}}
                        {{description}}
                    </li>
                    <div>
                        <ul>
                            {{each value}}
                            <li>
                                {{value}}
                                {{description}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/each}}
                </ul>
            </div>
            <div>
                {{name}}{{version}}{{description}}
            </div>
            <br>
            <div>
                {{#each properties}}
                <ul>
                    <li>
                        {{name}}
                        {{description}}
                    </li>
                    <div>
                        <ul>
                            {{#each value}}
                            <li>
                                {{value}}
                                {{description}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </ul>
                {{/each}}
            </div>
            <hr>
            <br>
            <div>
                {{name}}
                {{description}}
            </div>
            <div>
                {{#each value}}
                <ul>
                    <li>
                        {{value}}
                        {{description}}
                    </li>
                </ul>
                {{/each}}
            </div>
            {{/each}}
        </ul>
    </div>
    {{/with}}
</div>

