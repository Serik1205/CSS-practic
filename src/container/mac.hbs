{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <h1> {{> title big=true data="Apple MacBook Pro"}}</h1>
    <div>
        <h3>description:{{description}}</h3>
        <h3>price:{{price}}</h3>
        <h3>category:{{category}}</h3>
    </div>
    <br>
    <hr>
    <div>
        <h4>features:{{#with features}}</h4>
        <b>processor:{{#with processor}}</b>
        <ul>
            <li>brand:{{brand}}</li>
            <li>model:{{model}}</li>
            <li>speed:{{speed}}</li>
            <li>cores:{{cores}}</li>
            <li>cache:{{cache}}</li>
        </ul>
        {{/with}}
        <br>
        <b>memory:{{#with memory}}</b>
        <ul>
            <li>type:{{type}}</li>
            <li>size:{{size}}</li>
            <li>speed:{{speed}}</li>
        </ul>
        {{/with}}
        <br>
        <b>storage:{{#with storage}}</b>
        <ul>
            <li>type:{{type}}</li>
            <li>size:{{size}}</li>
        </ul>
        {{/with}}
        <br>
        <b>display:{{#with display }}</b>
        <ul>
            <li>size:{{size}}</li>
            <li>resolution:{{resolution}}</li>
            <li>technology:{{technology}}</li>
            <li>color space:{{color_space}}</li>
            <li>brightness:{{brightness}}</li>
            <li>refresh rate:{{refresh_rate}}</li>
        </ul>
        {{/with}}
        <br>
        <b>graphics:{{#with graphics}}</b>
        <ul>
            <li>brend:{{brand}}</li>
            <li>model:{{model}}</li>
            <li>memory:{{memory}}</li>
        </ul>
        {{/with}}
        <br>
        <b>ports:{{#each ports}}</b>
        <ul>
            <li>
                {{type}}
                {{count}}
            </li>
        </ul>
        <b>{{#each features}}</b>
        <ul>
            <li>{{this}}</li>
        </ul>
        {{/each}}
        {{/each}}

        {{/with}}
    </div>
</div>

