{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with program}}
    <div>
        {{#with excursion}}
        <h1>{{>title data="Excursion"}}</h1>
        <hr />
        <br />
        <div>
            <h2>Name:"{{name}}"</h2>
            <div>{{location.city}}{{location.country}}</div>
            <br>
            <data>{{date}}</data>
            <h2>{{>title data="Program"}}</h2>
            <div>
                {{#each program}}
                <ul>
                    <li>
                        <div>
                            <h3>{{name}}</h3>
                        </div>
                        <div>Type: {{type}}</div>
                        <div>Duration: {{duration}}</div>
                        <div>
                            {{#with details}}
                            <div>
                                <div>
                                    {{#with museum}}
                                    <div><strong>{{name}}</strong></div>
                                    <div>
                                        {{location.address}},
                                        {{location.city}},
                                        {{location.country}}
                                    </div>
                                    <p><em>Exhibits</em></p>
                                    <div>
                                        {{#each exhibits}}
                    <li>
                        <b>{{name}}</b>
                        <br />
                        {{#if artist}}{{artist}}
                        {{else}}
                        {{/if}}
                        {{description}}
                        <br />
                        {{#if audio_guide}}(audio guide){{/if}}
                    </li>
                    {{/each}}
                </ul>
            </div>
            {{/with}}
        </div>
    </div>

