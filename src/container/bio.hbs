{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<section></section>
<div>

    <div>
        <h1>{{name}}</h1>
        <div>
            <b>birth date:</b>
            {{birthdate}}
        </div>
        <div>
            <b>birth place:</b>
            <address>{{birthplace}}</address>
        </div>
        <br>
        <div>

        </div>
        <b> death date:</b>
        {{deathdate}}
    </div>
    <div>
        <b>death place:</b>
        <address>{{deathplace}}</address>
    </div>
    <hr>
</div>
</section>
<div>
    <h2>{{occupation}}</h2>
</div>
<div>
    <ul>
        {{#each known_for}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
</div>
<hr>
<br>
<div>
    {{> title big=true data="Education"}}
    <ol>
        {{#each education}}
        <li> <b>{{this.degree}}</b></li>
        <li><b>{{this.field}}</b></li>
        <li><b>{{this.institution}}</b></li>
        <em>Year:{{year}}</em>
        {{/each}}
    </ol>
</div>
<hr>
<hr>
<br>
<div>
    <strong>{{> title big=true data="Notable Publications"}}</strong>
    <ul>
        {{#each notable_publications}}
        <li><b>{{title}}</b></li>
        <em>Year:{{year}}</em>

        {{/each}}
        <div>
            <em>publisher:</em>//<b>Annalen der Physik</b>
        </div>
    </ul>
</div>

