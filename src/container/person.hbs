{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
    <div>
        <h1>{{name}}</h1>
        <ul>
            <li>
                <b>age:{{age}}</b>
            </li>
            <li>
                <b>gender: 'Female'</b>
            </li>
        </ul>
        <hr>
        <hr>
        <br>
        <address>
            {{> title data="Address:" small=true}}
            <ul>
                {{#each address }}
                <li>
                    {{this}}
                </li>
                {{/each}}
            </ul>
    </div>
    <hr>
    <br>
    </address>
    {{> title data="Education" small=true}}
    <ol>
        {{#each education}}

        <li>{{this.degree}}</li>
        <li>{{this.major}}</li>
        <li>{{this.university}}</li>
        <b>graduationYear:{{this.graduationYear}}</b>
        {{/each}}
    </ol>

</div>
<div>
    {{> title data="Work Experience" small=true}}
    <ul>
        {{#each workExperience}}
        <li>company:{{this.company}}</li>
        <li>{{this.title}}//.
            Start Date:{{this.startDate}}.
            End Date:{{this.endDate}}
        </li>
        {{/each}}
    </ul>
</div>
<div>
    {{> title data="Responsibilities" small=true}}
    <ul>
        {{#each this.workExperience }}
        <li>
            <p>{{this.responsibilities}}</p>
        </li>
        <b>Year founded:{{this.year_founded}}</b>
        {{/each}}
    </ul>
</div>




{{/with}}
</div>
</div>

