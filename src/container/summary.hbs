{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            <div>
                {{> title big=true data="Summary"}}
            </div>
            <div>
                <p>
                    {{summary.text}}
                </p>
            </div>
        </section>

        <section>
            {{#with eEperience}},
            <div>
                {{>title big=false data=title}}
            </div>
            <div>
                <p>{{text}}</p>
            </div>
            {{/with}},
        </section>
    </main>
    {{/with}}
</div>

