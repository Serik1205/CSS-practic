<header class="header">
	<a href="#test">
		{{>logo}}
	</a>
	<nav class="header_nav ">
		<div class="header_nav_right">
			{{>nav1 list=header }}
		</div>
	</nav>
</header>
<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">
			{{description}}
		</p>
	</div>
	{{/with}}
	{{#with form}}
	<form class="form">
		<h2 class="form_title">{{title}}</h2>
		<div class="input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-id-{{id}}"
				class="form_input">
			{{/each}}
		</div>
		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>
		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>
{{#with updates}}
<div class="updates">
	{{#each list}}
	<div class="updates_list">
		<div class="updates_img">64*64</div>
		<div class="upd_text">
			<strong>{{nickname}}</strong>
			<p>{{description}}</p>
		</div>
		{{#with show_all}}
		<a href="{{url}}">{{text}}</a>
		{{/with}}
	</div>
	{{/each}}
</div>
{{/with}}
{{#with expirience}}
<div class="expirience">
	<h1 class="expirience_title">{{title}}</h1>
	<div class="exp_content">
		{{#each list}}
		<div class="expirience_content">
			<div class="expirience_text">
				<strong>{{name}}</strong>
				<p>{{details}}</p>
			</div>
		</div>
		{{/each}}
	</div>
</div>
<footer class=" footer " id=" test">
	<div>
		{{>logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div>
		<span class="footer_title ">{{title}}</span>
		{{>nav1 list=links isVertical=true }}
	</div>
	{{/each}}
</footer>